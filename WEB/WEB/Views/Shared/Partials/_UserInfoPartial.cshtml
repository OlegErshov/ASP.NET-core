
@if (User.Identity.IsAuthenticated)
{
    @await Component.InvokeAsync("Cart")

    <div class="dropdown ms-4 nav-color">
        <button class="btn btn-secondary dropdown-toggle"
                type="button" id="dropdownMenuButton"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            @User.Claims.FirstOrDefault(c=>
                    c.Type.Equals("Name",StringComparison.OrdinalIgnoreCase))?.Value
            <img src="https://localhost:7003/avatar" width="30" alt="User" class="rounded"/>
                 alt="User" class="rounded nav-color" />
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li>
                <span class="dropdown-item-text">
                    <img src="https://localhost:7003/avatar" width="30" alt="User" class="rounded" />
                    @User.Claims.FirstOrDefault(c=>
                            c.Type.Equals("Name",StringComparison.OrdinalIgnoreCase))?.Value
                </span>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-controller="Identity" asp-action="LogOut" id="logoutForm" class="form-inline">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                        Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <li>
        <a class="dropdown-item" asp-controller="Identity" asp-action="Login">Login</a>
    </li>
}
